pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Package'
                sh './mvnw package -DskipTests'
            }
        }
        stage('Move') {
            steps {
              sh 'mv target/*.jar /home/vagrant/data/'
              sh 'sudo chmod 777 /home/vagrant/data/*.jar'
            }
        }
        stage('Deploy') {
            steps {
              sh 'sudo systemctl restart petclinic'
              sh 'sudo systemctl status petclinic'
            }
        }
    }
}
